{
  "name": "lookforfood",
  "version": "1.1.0",
  "description": "search for nearby food trucks",
  "main": "index.html",
  "author": "Gagan Dhaliwal",
  "license": "ISC",
  "scripts": {
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "karma start --coverage ",
    "start": "es-dev-server --app-index index.html --node-resolve --open --watch",
    "start-server": "node ./server/app.js",
    "server-test": "mocha ./server/server.test.js",
    "document:packages": "wca analyze src --format markdown --outFile code-docs.md",
    "build": "webpack --mode production",
    "release": "standard-version",
    "patch": "npm run release",
    "minor": "npm run release -- --release-as minor",
    "major": "npm run release -- --release-as major",
    "dry-run": "npm run release -- --dry-run",
    "pre-release": "npm run release -- --prerelease alpha"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@open-wc/building-webpack": "^2.13.42",
    "@open-wc/eslint-config": "^3.0.0",
    "@open-wc/testing": "^2.5.25",
    "@open-wc/testing-karma": "^4.0.5",
    "copy-webpack-plugin": "^6.1.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.4",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "sinon": "^9.1.0",
    "standard-version": "^9.0.0",
    "supertest": "^5.0.0",
    "web-component-analyzer": "^1.1.6",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.1.3"
  },
  "dependencies": {
    "@open-wc/scoped-elements": "^1.2.2",
    "@lion/ajax": "^0.5.5",
    "@lion/button": "^0.7.14",
    "@lion/form": "^0.7.0",
    "@lion/input": "^0.9.1",
    "@lion/input-email": "^0.8.22",
    "body-parser": "^1.19.0",
    "csv-parser": "^2.3.3",
    "express": "^4.17.1",
    "jsonschema": "^1.2.7",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  }
}